<configuration>

  <!-- Client certificate Store -->
  <property>
    <name>ssl.client.keystore.type</name>
    <value>PKCS12</value>
  </property>
  <property>
    <name>ssl.client.keystore.location</name>
    <value>/etc/security/hadoop-keystores/hadoop.p12</value>
  </property>
  <property>
    <name>ssl.client.keystore.password</name>
    <value>thekeystorespasswd</value>
  </property>

  <property>
    <name>ssl.client.keystore.keypassword</name>
    <value>thekeystorespasswd</value>
  </property>

  <!-- Client Trust Store -->
  <property>
    <name>ssl.client.truststore.type</name>
    <value>PKCS12</value>
  </property>
  <property>
    <name>ssl.client.truststore.location</name>
    <value>/etc/security/hadoop-truststores/truststore.p12</value>
  </property>
  <property>
    <name>ssl.client.truststore.password</name>
    <value>thekeystorespasswd</value>
  </property>
  <property>
    <name>ssl.client.truststore.reload.interval</name>
    <value>10000</value>
  </property>

</configuration>
