<configuration>

  <!-- Server Certificate Store -->
  <property>
    <name>ssl.server.keystore.type</name>
    <value>PKCS12</value>
  </property>
  <property>
    <name>ssl.server.keystore.location</name>
    <value>/etc/security/hadoop-keystores/hadoop.p12</value>
  </property>
  <property>
    <name>ssl.server.keystore.password</name>
    <value>thekeystorespasswd</value>
  </property>

  <property>
    <name>ssl.server.keystore.keypassword</name>
    <value>thekeystorespasswd</value>
  </property>

  <!-- Server Trust Store -->
  <property>
    <name>ssl.server.truststore.type</name>
    <value>PKCS12</value>
  </property>
  <property>
    <name>ssl.server.truststore.location</name>
    <value>${env.SSL_TRUSTSTORES_PATH}/truststore.p12</value>
  </property>
  <property>
    <name>ssl.server.truststore.password</name>
    <value>thekeystorespasswd</value>
  </property>
  <property>
    <name>ssl.server.truststore.reload.interval</name>
    <value>10000</value>
  </property>

  <property>
    <name>fs.knoxwebhdfs.impl</name>
    <value>org.apache.hadoop.hdfs.web.KnoxWebHdfsFileSystem</value>
  </property>
  <property>
    <name>fs.AbstractFileSystem.knoxwebhdfs.impl</name>
    <value>org.apache.hadoop.fs.KnoxWebHdfs</value>
  </property>
  <property>
    <name>fs.knoxwebhdfs.impl.disable.cache</name>
    <value>true</value>
  </property>
  <property>
    <name>fs.knoxwebhdfs.https.enabled</name>
    <value>true</value>
  </property>
  <property>
    <name>fs.knoxswebhdfs.impl</name>
    <value>org.apache.hadoop.hdfs.web.KnoxSWebHdfsFileSystem</value>
  </property>
  <property>
    <name>fs.AbstractFileSystem.knoxswebhdfs.impl</name>
    <value>org.apache.hadoop.fs.KnoxSWebHdfs</value>
  </property>
  <property>
    <name>fs.knoxswebhdfs.impl.disable.cache</name>
    <value>true</value>
  </property>
  <property>
    <name>fs.knoxswebhdfs.https.enabled</name>
    <value>true</value>
  </property>

</configuration>
